{% extends 'crazytemplate.html.twig' %}

{% block title %}- Actualités{% endblock %}

{% block body %}
<section class="bande-01">
	<div class="container">
		<h1>Actualités</h1>
		
		{% for news in listeNews %}
			<p><strong class="rose">{{ news.publication|date("d/m/Y") }}</strong> - {{ news.titre }}
			<a href="{{ path('actualites_post', {'id': news.id}) }}" class="rose">Lire</a></p>
		{% endfor %}

		<ul class="pagination">
			{# Fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
			{% for p in range(1, nbPages) %}
				<li{% if p == page %} class="active"{% endif %}>
					<a href="{{ path('actualites', {'page': p}) }}">{{ p }}</a>
				</li>
			{% endfor %}
		</ul>

		
	</div><!-- /.container -->
</section><!-- /.bande-01 -->







{% endblock %}
