{% extends 'admin.html.twig' %}

{% block title %}Tableau de bord Actualités{% endblock %}

{% block contenu %}

<h1>Actualités</h1>

	<table class="table table-striped table-sm table-hover">
	  <thead class="thead-inverse">
	    <tr>
	      <th>Référence</th>
	      <th></th>
	      <th></th>
	    </tr>
	  </thead>
	  <tbody>
	    
	    	{% for news in listeNews %}
	    	<tr>
	    		<td class="intitule">{{ news.titre }}</td>
	    		<td><a href="{{ path('editer-actualite', {'id': news.id}) }}" class="btn btn-secondary btn-sm"><i class="fa fa-pencil" aria-hidden="true"></i></a></td>
	      		<td><a href="{{ path('supprimer-actualite', {'id': news.id}) }}" class="btn btn-outline-danger btn-sm"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
	    	</tr>
	    {% endfor %}
	    
	  </tbody>
	</table>

{% endblock %}


